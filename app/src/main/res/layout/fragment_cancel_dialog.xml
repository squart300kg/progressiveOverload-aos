<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:sauceLive="http://schemas.android.com/tools">

    <data>
<!--        <variable-->
<!--            name="product"-->
<!--            type="kr.co.mobidoo.sauce.network.model.Product" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cancel"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 프로그램을 저장할까요?"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="취소"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_first"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/v_first"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_question"
            app:layout_constraintStart_toEndOf="@id/tv_cancel"
            app:layout_constraintEnd_toStartOf="@id/tv_no_save"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_no_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="저장안함"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_question"
            app:layout_constraintStart_toEndOf="@+id/v_first"
            app:layout_constraintEnd_toStartOf="@id/v_second"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/v_second"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_question"
            app:layout_constraintStart_toEndOf="@id/tv_no_save"
            app:layout_constraintEnd_toStartOf="@id/tv_save"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="저장"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_question"
            app:layout_constraintStart_toEndOf="@+id/v_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>