<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="exerciseVm"
            type="com.progressive.overload.ui.home.sub.RegExerciseTypeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:overload="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_exercise_register_filed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="운동종목"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_exercise_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginEnd="20dp"
            android:textAlignment="textEnd"
            android:hint="스쿼트"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/main_orange_color"
            android:textStyle="bold"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            overload:text="@{exerciseVm.exercise.name}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
