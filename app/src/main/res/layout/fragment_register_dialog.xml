<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:sauceLive="http://schemas.android.com/tools">

    <data>
<!--        <variable-->
<!--            name="product"-->
<!--            type="kr.co.mobidoo.sauce.network.model.Product" />-->
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_register"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="프로그램 이름을 입력해 주세요"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="48"
                android:layout_height="50dp"
                android:text="취소"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/et_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/v_divider"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/v_divider"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_input"
                app:layout_constraintEnd_toStartOf="@id/tv_cancel"
                app:layout_constraintStart_toEndOf="@id/tv_ok"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_weight="48"
                android:layout_height="50dp"
                android:text="확인"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_input"
                app:layout_constraintStart_toEndOf="@+id/v_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>



    </LinearLayout>
</layout>